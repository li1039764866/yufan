<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd 
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <!-- 配置注解驱动 (处理器映射器 +处理器适配器)-->
    <mvc:annotation-driven/>

    <!--不拦截静态资源-->

    <mvc:resources mapping="/images/**" location="/images/"/>
    <mvc:resources mapping="/css/**" location="/css/"/>
    <mvc:resources mapping="/js/**" location="/js/"/>
       
       <!-- 配置扫描包 -->
       <context:component-scan base-package="org.yufan.controller"/>


       


    <!--配置日期转换器-->
         <bean class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
             <property name="converters">
                 <set>
                     <bean class="org.yufan.converter.DateConverter"/>
                 </set>
             </property>
         </bean>

    <!--配置全局异常处理器-->
    <bean class="org.yufan.exception.CustomerHandlerException"></bean>

       <!-- 配置视图解析器 -->
       <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
           <property name="prefix" value="/WEB-INF/views/"/>
           <property name="suffix" value=".jsp"/>
       </bean>


    <!-- 上传文件拦截，设置最大上传文件大小   10M=10*1024*1024(B)=10485760 bytes -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="10485760" />
    </bean>
    <!--配置权限拦截器，拦截所有需要登录才能访问的页面-->
    <mvc:interceptors>
        <mvc:interceptor>
            <!--对下面路径进行拦截，可配置多个路径-->
            <mvc:mapping path="/user/cart.html"/>
            <!--使用下面拦截器进行拦截-->
            <bean class="org.yufan.interceptor.LoginInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>
       
       
</beans>